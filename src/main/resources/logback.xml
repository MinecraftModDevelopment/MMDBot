<configuration>
    <appender name="FILE"
        class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy
            class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>bot_logs/log.%d{yyyy-MM-dd}.txt</fileNamePattern>

            <!-- keep 30 days' worth of history capped at 1GB total size -->
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>
                %nopex[%d{HH:mm:ss}] [%level] [%logger{0}/%marker]:
                %msg%n%ex
            </pattern>
        </encoder>
    </appender>
    <!--Log levels include ERROR, WARN, INFO, DEBUG, TRACE -->
    <root level="DEBUG">
        <appender-ref ref="FILE" />
    </root>

    <appender name="CONSOLE"
        class="ch.qos.logback.core.ConsoleAppender">
        <encoder
            class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>
                %d %green([%thread]) %highlight(%level)
                %logger{50}/%marker - %msg%n
            </pattern>
        </encoder>
    </appender>
    <!--Log levels include ERROR, WARN, INFO, DEBUG, TRACE -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE" />
    </root>

    <appender name="CHANNEL"
        class="com.mcmoddev.mmdbot.utilities.console.ConsoleChannelAppender">
        <allowMentions>false</allowMentions>
        <layout
            class="com.mcmoddev.mmdbot.utilities.console.ConsoleChannelLayout">
            <prependLevelName>false</prependLevelName>
        </layout>
    </appender>

    <!--Log levels include ERROR, WARN, INFO, DEBUG, TRACE -->
    <root level="INFO">
        <appender-ref ref="CHANNEL" />
    </root>
</configuration>
